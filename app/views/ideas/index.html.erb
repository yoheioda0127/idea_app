<div class = "whole-wrapper">
  
    <%# <h1>検索ボックス</h1> %>
    <%= form_with url: search_ideas_path, method: :get, local: true do |f| %>
    <div class= "top-wrapper">
        <div class="new-box">
          <%= link_to '+', "/ideas/new", class: "new-button" %>
        </div>
        
        <div class= "sort-box">
          <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class: "sort-pull", id:"weather_id"}) %>
          <%= f.submit :ソートする, class: "sort-button" %>
        </div>
      </div>
    <% end %>

  <div class= "index-wrapper">
    <%# アイディア一覧 %>
    <% if @ideas.present? %>
      <div class = "index-box">
        <% @ideas.each do |idea| %>
          <div class="index-box-contents"> 
            <div class="index-contents">
              <div class="index-contents-body">
                ◯　<%= idea.body.truncate(8) %>
              </div>
              <div class = "right-contents"> 
                <div class = "category-badge">
                  <%= idea.category.name %>
                </div>
                <div class = "post-date">
                  <%= idea.created_at.strftime('%Y年%m月%d日')%>
                </div>
                <div>
                  <%= button_to "削除する", idea_path(idea.id), class: "delete-button", data: {confirm: "アイディアを削除しますか?"}, method: :delete %>
                </div>
              </div>
            </div>

            <div class="body-wrapper">
            
              <div class="open-checked">
                <label for="label-box">
                  <span class="body-open-button">全文を表示</span>
                </label>
                <input type="checkbox" id="label-box"/>

                <div class="appear">
                  <%= safe_join(idea.body.split("\n"),tag(:br)) %>
                </div>
              </div>

            </div>

          </div>
        <%end%>
      </div>
    <%else%>
      <div class="index-dummy-word">まだアイディアがありません。<br>あなたのアイディアを記録しましょう！</div>
    <%end%>
  </div>
</div>

<div class='app-logo-box'>
    <%= link_to image_tag("app-logo.png", class: "app-logo-icon"), "/" %>
</div>